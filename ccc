<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>찌그러진 애니메이션</title>
  <style>
    canvas {
      border: 1px solid black;
      display: block;
      margin: auto;
      /* 실제로 세로를 압축해서 찌그러뜨리는 효과 */
      transform: scaleY(0.85);
      transform-origin: top;
    }
  </style>
</head>
<body>
  <canvas id="canvas" width="500" height="500"></canvas>
  <script>
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');

    const centerX = canvas.width / 2 + 0.5;
    const centerY = canvas.height / 2 + 0.5;
    const redLineLength = 50;
    const greenCircleRadius = 30;
    let angle = 0;

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      // 파란 대각선
      ctx.strokeStyle = 'blue';
      ctx.lineWidth = 1;

      ctx.beginPath();
      ctx.moveTo(0.5, 0.5);  
      ctx.lineTo(canvas.width + 0.5, canvas.height + 0.5);

      ctx.moveTo(canvas.width + 0.5, 0.5); 
      ctx.lineTo(0.5, canvas.height + 0.5);
      ctx.stroke();

      // 빨간 회전선
      const endX = centerX + redLineLength * Math.cos(angle);
      const endY = centerY + redLineLength * Math.sin(angle);

      ctx.strokeStyle = 'red';
      ctx.lineWidth = 3;
      ctx.beginPath();
      ctx.moveTo(centerX, centerY);
      ctx.lineTo(endX, endY);
      ctx.stroke();

      // 초록 원
      ctx.fillStyle = 'green';
      ctx.beginPath();
      ctx.arc(centerX, centerY, greenCircleRadius, 0, Math.PI * 2);
      ctx.fill();

      // 각도 증가
      angle += 0.02;
      requestAnimationFrame(draw);
    }

    draw();
  </script>
</body>
</html>
